
@{
    ViewBag.Title = "Guardar";
}

<style>
    strong{
        color:red;
    }
</style>

<h2>Guardar</h2>
<form method="post" action="/Libro/Guardar">
    <div class="form-group">
        <label>Nombre <strong>@Html.ValidationMessage("Nombre")</strong></label>
        <input class="form-control" name="Nombre" value="@Model.Nombre"/>
    </div>
    <div class="form-group">
        <label>Autor <strong>@Html.ValidationMessage("Autor")</strong></label>
        <input class="form-control" name="Autor" value="@Model.Autor" />
    </div>
    <div class="form-group">
        <label>Fecha</label>
        <strong>@Html.ValidationMessage("FechaPublicaion")</strong>
        <input type="date" class="form-control" name="FechaPublicaion"value="@Model.FechaPublicaion" />
    </div>
    <button class="btn btn-primary"  >Guardar</button>
</form>
